#include "math.h"
#include "stdio.h"
#include "stdlib.h"






double sgn(double x)
{
	if (x > 0)
	{
		return 1;
	}
	else if (x == 0)
	{
		return 0;
	}
	else if (x < 0)
	{
		return -1;
	}
}


double getx4(double a, double b, double c, double d, double e, double left, double right) {
	double y, leftvalue, rightvalue, centery;
	do {
		y = (right - left) / 2 + left;
		leftvalue = a * left * left + b * left + c;
		rightvalue = a * right * right + b * right + c;

		centery = a * y * y + b * y + c;



		if (sgn(centery) == sgn(leftvalue))
		{
			left = (right - left) / 2 + left;
			right = right;
		}
		else if (sgn(centery) == sgn(rightvalue))
		{
			left = left;
			right = right - (right - left) / 2;
		}
		
	} while (right - left > 0.0000000001);
	return left;
}




int main()
{
	double x;
	x = getx4(1, -3 - sqrt(2), 3 * sqrt(2), 0, 0, 1, 2);
	printf("%.10f", x);
	system("pause");
	return 0;
}
